@using EndangeredNearYou.Web.Models
@model LocationViewModel

<h3>@Model.Name Information</h3>

<table class="table">
    <tr>
        <th>Location ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category ID</th>
        <th>On Sale</th>
        <th>StockLevel</th>
    </tr>
    <tr>
        <td>@Model.LocationId</td>
        <td>@Model.Name</td>
        <td>@Model.Price</td>
        <td>@Model.CategoryId</td>
        <td>@Model.OnSale</td>
        <td>@Model.StockLevel</td>
    </tr>
</table>

<div style="display: block">
    <a href="/Location/UpdateLocation/@Model.LocationId">Update this Location</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteLocation", "Location", "Post"))
    {
        <input type="hidden" asp-for="LocationId" value="@Model.LocationId" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this location" />
    }
</div>